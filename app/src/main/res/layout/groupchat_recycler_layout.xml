<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/group_card_view">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/user_image_vector"
                    android:id="@+id/user_image__GroupMsgActivity"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/user_name"
                          android:textSize="20sp"
                          android:id="@+id/Username_recyclerView_GroupMsgActivty"
                          android:layout_marginTop="15dp"
                          android:textStyle="bold"/>

                <TextView android:layout_width="match_parent"
                          android:maxWidth="240dp"
                          android:layout_height="wrap_content"
                          android:text="username"
                          android:id="@+id/msg_tv_latestMessage"
                          android:textSize="15sp"
                          android:layout_marginTop="5dp"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/check_icon"
                           android:visibility="gone"
                           android:src="@drawable/ic_check_circle_black_24dp"
                           android:layout_gravity="top|right"
                />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>